{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib",
		"declaration": true,
		"declarationDir": "./@types/",
		"baseUrl": "./",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		/* "comment": "noImplicitOverride should be true when prettier has been updated", */
		"noImplicitOverride": false,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
	},
   "include": ["./src/**/*.ts"],
	"ts-node": {
		"emit": true
	}
}
